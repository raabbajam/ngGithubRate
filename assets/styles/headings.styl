h1, h2, h3
  font-family Alegreya-sans
.title
  font-weight lighter
  font-size 3.3em
  color darken($text-color, 25%)
  absolute top 33% left 50%
  transform translateY(-50%)
  text-shadow 1px 1px 2px #000
  padding-left 20px

.subtitle
  font-size 1.3em
  z-index 2
  color darken($text-color, 50%)
  absolute top 33% left 50%
  transform translateX(-100%) translateY(-50%)
  text-shadow 1px 1px 2px #000
  padding-right 20px
